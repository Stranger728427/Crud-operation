<%- include('./partials/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">Add New User</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input type="number" class="form-control" id="age" name="age">
                </div>

                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" id="address" name="address">
                </div>

                <button type="submit" class="btn btn-primary">Add User</button>
            </form>
        </div>


        <!-- show the user all -->
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-danger text-center">List Of User</h2>


            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Address</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>

                <tbody>

                    <% var i=1 %>
                    <% data.forEach((item)=>{ %>
                         
                    
                    <tr>
                        <td> <%= i++ %> </td>
                        <td> <%= item.name %> </td>
                        <td> <%= item.age %> </td>
                        <td> <%= item.address %> </td>

                        <td>
                            <form action="/user/edit/<%= item._id %>" method="get" class="d-inline">
                                <button type="submit" class="btn">

                                    <i class="fas fa-pen-square text-info">
 
                                    </i></button>
                            </form>
                            <form action="/user/delete/<%= item._id %>" method="post" class="d-inline">
                                <button type="submit" class="btn">
                                    <i class="fas fa-trash text-danger">
                                        
                                    </i></button>
                            </form>
                        </td>
                    </tr>

                    <%})%>
                </tbody>
            </table>
            
        </div>
        
    </div>
</div>
<%- include('./partials/footer.ejs') %>